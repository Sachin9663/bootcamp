<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title><%= title %></title>
    <link rel="stylesheet" href="styles/styles.css">
</head>
<body>
<header>
    <h1>
        <%= title %>
    </h1>
    <ul>
        <li>
            <a href="/">
                Home
            </a>
        </li>
        <li>
            <a href="/login">
                Log In
            </a>
        </li>
        <li>
            <a href="/signup">
                Sign Up
            </a>
        </li>
    </ul>
</header>
<section class="form-container">
    <form
            action="/user/signup"
            method="post"
    >
        <input
                type="text"
                name="name"
                id="name"
                required
                placeholder="Name"
        >

        <input
                type="email"
                name="email"
                id="email"
                placeholder="Email"
                required
        >

        <input
                type="password"
                name="password"
                id="password"
                placeholder="Password"
                required
        >

        <input type="submit" value="Sign Up">

    </form>
</section>
</body>
</html>